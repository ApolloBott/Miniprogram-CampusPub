.my-posts-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.posts-list {
  height: 100vh;
  padding: 24rpx;
}
.post-item {
  position: relative;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.post-item .restore-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #666 0%, #666 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  z-index: 10;
}
.post-item .restore-btn .restore-icon {
  width: 28rpx;
  height: 28rpx;
}
.post-item .restore-btn .restore-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}
.post-item .post-content {
  margin-bottom: 16rpx;
  padding-right: 100rpx;
}
.post-item .post-content .content-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.post-item .post-images {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}
.post-item .post-images .post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}
.post-item .post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}
.post-item .post-footer .left-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.post-item .post-footer .left-info .post-time {
  font-size: 24rpx;
  color: #999999;
}
.post-item .post-footer .post-stats {
  display: flex;
  gap: 32rpx;
}
.post-item .post-footer .post-stats .stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.post-item .post-footer .post-stats .stat-item .stat-icon-img {
  width: 32rpx;
  height: 32rpx;
}
.post-item .post-footer .post-stats .stat-item .stat-count {
  font-size: 24rpx;
  color: #999999;
}
.load-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999999;
}
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}
.empty .empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}
.empty .empty-text {
  font-size: 28rpx;
  color: #999999;
}
