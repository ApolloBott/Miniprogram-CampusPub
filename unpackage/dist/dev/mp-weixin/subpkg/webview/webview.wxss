/* 水平间距 */
.webview-page {
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}
.custom-navbar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}
.custom-navbar .navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}
.custom-navbar .navbar-content .navbar-left {
  width: 80rpx;
  display: flex;
  align-items: center;
}
.custom-navbar .navbar-content .navbar-left .back-icon {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}
.custom-navbar .navbar-content .navbar-center {
  flex: 1;
  text-align: center;
}
.custom-navbar .navbar-content .navbar-center .navbar-title {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 500;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.custom-navbar .navbar-content .navbar-right {
  width: 120rpx;
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}
.custom-navbar .navbar-content .navbar-right .refresh-icon,
.custom-navbar .navbar-content .navbar-right .more-icon {
  font-size: 32rpx;
  color: #ffffff;
  padding: 8rpx;
}
.progress-bar {
  height: 4rpx;
  background-color: rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}
.progress-bar .progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
  transition: width 0.3s ease;
  position: absolute;
  left: 0;
  top: 0;
}
.webview-container {
  flex: 1;
  width: 100%;
}
.error-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.error-container .error-content {
  text-align: center;
  padding: 40rpx;
}
.error-container .error-content .error-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  display: block;
}
.error-container .error-content .error-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}
.error-container .error-content .error-message {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 48rpx;
  display: block;
}
.error-container .error-content .error-actions {
  display: flex;
  gap: 24rpx;
  justify-content: center;
}
.error-container .error-content .error-actions .error-btn {
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  transition: all 0.3s;
}
.error-container .error-content .error-actions .error-btn.retry {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}
.error-container .error-content .error-actions .error-btn.retry:active {
  opacity: 0.8;
}
.error-container .error-content .error-actions .error-btn.back {
  background-color: #f5f5f5;
  color: #666666;
}
.error-container .error-content .error-actions .error-btn.back:active {
  background-color: #e8e8e8;
}
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}
.webview-container {
  margin-top: var(--navbar-height);
}
@media (prefers-color-scheme: dark) {
.webview-page {
    background-color: #1f1f1f;
}
.error-container {
    background-color: #1f1f1f;
}
.error-container .error-title {
    color: #ffffff;
}
.error-container .error-message {
    color: #cccccc;
}
.error-container .error-btn.back {
    background-color: #333333;
    color: #cccccc;
}
}
