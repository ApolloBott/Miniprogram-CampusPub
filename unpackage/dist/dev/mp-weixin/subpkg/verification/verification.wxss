.verification-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.verified-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}
.verified-status .status-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}
.verified-status .status-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 16rpx;
}
.verified-status .status-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 32rpx;
}
.verified-info {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 32rpx;
  width: 100%;
  max-width: 600rpx;
  box-sizing: border-box;
}
.verified-info .info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.verified-info .info-item:last-child {
  border-bottom: none;
}
.verified-info .info-item .label {
  font-size: 28rpx;
  color: #999999;
}
.verified-info .info-item .value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}
.retry-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  padding: 24rpx 48rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 48rpx;
  transition: all 0.3s;
}
.retry-btn:active {
  opacity: 0.8;
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
}
.verification-form {
  padding: 32rpx;
}
.form-header {
  text-align: center;
  margin-bottom: 48rpx;
}
.form-header .header-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}
.form-header .header-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}
.form-header .header-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}
.form-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}
.form-item {
  margin-bottom: 32rpx;
  /* üî• Êñ∞Â¢ûÔºöÂ≠¶Èô¢ÈÄâÊã©Âô®Ê†∑Âºè */
}
.form-item:last-child {
  margin-bottom: 0;
}
.form-item .item-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}
.form-item .item-label .required {
  color: #ef4444;
  margin-left: 4rpx;
}
.form-item .item-input {
  width: 100%;
  height: 88rpx;
  background-color: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.3s;
}
.form-item .item-input:focus {
  background-color: #ffffff;
  border-color: #667eea;
}
.form-item .input-placeholder {
  color: #9ca3af;
}
.form-item .picker-input {
  width: 100%;
  height: 88rpx;
  background-color: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s;
}
.form-item .picker-input .picker-text {
  font-size: 28rpx;
  color: #9ca3af;
  flex: 1;
}
.form-item .picker-input.has-value .picker-text {
  color: #333333;
}
.form-item .picker-input .picker-arrow {
  font-size: 24rpx;
  color: #9ca3af;
  margin-left: 12rpx;
}
.form-item .hint-tip {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
  display: block;
}
.form-item .error-tip {
  font-size: 24rpx;
  color: #ef4444;
  margin-top: 8rpx;
  display: block;
}
.notice-section {
  background-color: #f0f9ff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  border-left: 4rpx solid #3b82f6;
}
.notice-section .notice-title {
  font-size: 28rpx;
  color: #1e40af;
  font-weight: 600;
  margin-bottom: 16rpx;
}
.notice-section .notice-item {
  font-size: 24rpx;
  color: #475569;
  line-height: 1.8;
  margin-bottom: 8rpx;
}
.notice-section .notice-item:last-child {
  margin-bottom: 0;
}
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}
.submit-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}
.submit-btn.submitting {
  opacity: 0.7;
  background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
}
.submit-btn::after {
  border: none;
}
