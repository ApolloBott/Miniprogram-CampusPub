.follow-message-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}
.header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.header .count {
  font-size: 28rpx;
  color: #999;
}
.follower-list .follower-item {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.follower-list .follower-item .follower-info {
  display: flex;
  align-items: center;
  flex: 1;
  cursor: pointer;
}
.follower-list .follower-item .follower-info .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.follower-list .follower-item .follower-info .info-content {
  display: flex;
  flex-direction: column;
}
.follower-list .follower-item .follower-info .info-content .nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}
.follower-list .follower-item .follower-info .info-content .follow-info {
  display: flex;
  align-items: center;
}
.follower-list .follower-item .follower-info .info-content .follow-info .follow-time {
  font-size: 24rpx;
  color: #999;
  margin-right: 12rpx;
}
.follower-list .follower-item .follower-info .info-content .follow-info .follow-tip {
  font-size: 24rpx;
  color: #666;
}
.follower-list .follower-item .follow-btn-wrapper .follow-btn {
  padding: 16rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}
.follower-list .follower-item .follow-btn-wrapper .follow-btn.normal {
  background-color: #1890ff;
  color: #fff;
}
.follower-list .follower-item .follow-btn-wrapper .follow-btn.mutual {
  background-color: #f0f0f0;
  color: #999;
}
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}
.empty-state .empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}
.empty-state .empty-text {
  font-size: 28rpx;
  color: #999;
}
.loading-state {
  text-align: center;
  padding: 100rpx 0;
  font-size: 28rpx;
  color: #999;
}
