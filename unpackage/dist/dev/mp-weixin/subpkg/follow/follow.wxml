<view class="follow-page"><view class="header"><text class="title">关注列表</text></view><view class="list"><block wx:for="{{users}}" wx:for-item="u" wx:for-index="index" wx:key="index"><view class="card"><image class="avatar" src="{{u.avatarUrl}}" mode="aspectFill" data-event-opts="{{[['tap',[['gotoProfile',['$0'],[[['users','',index]]]]]]]}}" bindtap="__e"></image><view class="info"><text data-event-opts="{{[['tap',[['gotoProfile',['$0'],[[['users','',index]]]]]]]}}" class="name" bindtap="__e">{{u.nickname}}</text><block wx:if="{{u.user_introduce}}"><text class="desc">{{u.user_introduce}}</text></block></view><view class="actions"><block wx:if="{{openid!==u.openid}}"><view data-event-opts="{{[['tap',[['goToChat',['$0'],[[['users','',index]]]]]]]}}" class="btn msg-btn" catchtap="__e"><text>私聊</text></view></block><block wx:if="{{u.openid!==openid}}"><view data-event-opts="{{[['tap',[['toggleFollow',['$0',index],[[['users','',index]]]]]]]}}" class="{{['btn','follow-btn',(isFollowing[index])?'following':'']}}" catchtap="__e"><text>{{isFollowing[index]?'已关注':'+ 关注'}}</text></view></block></view></view></block></view><block wx:if="{{!$root.g0}}"><view class="empty">暂无关注的人</view></block></view>