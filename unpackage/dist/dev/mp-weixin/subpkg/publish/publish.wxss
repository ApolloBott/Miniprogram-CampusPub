@charset "UTF-8";
/* 水平间距 */
/* 水平间距 */
.publish-container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 20rpx;
}
/* 顶部标题 */
.page-header {
  background-color: #fff;
  padding: 24rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}
.page-header .page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
/* 选项卡 */
.tabs-container {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 0 40rpx;
}
.tabs-container .tab-item {
  position: relative;
  padding: 24rpx 32rpx;
}
.tabs-container .tab-item .tab-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}
.tabs-container .tab-item .tab-content .tab-text {
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}
.tabs-container .tab-item .tab-content .tab-count {
  font-size: 20rpx;
  color: #999;
  background: #f5f5f5;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
  min-width: 32rpx;
  text-align: center;
  transition: all 0.3s;
}
.tabs-container .tab-item .tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #c00000;
  border-radius: 2rpx;
}
.tabs-container .tab-item.active .tab-content .tab-text {
  color: #c00000;
  font-weight: bold;
}
.tabs-container .tab-item.active .tab-content .tab-count {
  color: #fff;
  background: #c00000;
}
.waterfall {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #f5f5f5;
  box-sizing: border-box;
}
.col {
  width: 48%;
  display: flex;
  flex-direction: column;
}
/* 空状态 */
.empty-state {
  padding: 200rpx 0;
  text-align: center;
}
.empty-state .empty-text {
  font-size: 28rpx;
  color: #999;
}
