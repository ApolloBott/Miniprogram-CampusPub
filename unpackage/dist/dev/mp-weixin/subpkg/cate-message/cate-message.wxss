@charset "UTF-8";
/* 水平间距 */
/* 水平间距 */
.message-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}
/* 顶部标题 */
.header {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
}
.header .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}
/* 消息列表 */
.message-list {
  height: calc(100vh - 80rpx);
}
/* 单个消息项 */
.message-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  /* 用户头像 */
  /* 中间内容区域 */
  /* 商品图片 */
}
.message-item:active {
  background-color: #f5f5f5;
}
.message-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.message-item .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  margin-right: 24rpx;
}
.message-item .content .top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.message-item .content .top-row .nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}
.message-item .content .top-row .time {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
  flex-shrink: 0;
}
.message-item .content .bottom-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.message-item .content .bottom-row .last-message {
  font-size: 28rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}
.message-item .content .bottom-row .unread-badge {
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: #ff3b30;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
}
.message-item .content .bottom-row .unread-badge .unread-text {
  font-size: 20rpx;
  color: #ffffff;
  line-height: 1;
}
.message-item .goods-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}
