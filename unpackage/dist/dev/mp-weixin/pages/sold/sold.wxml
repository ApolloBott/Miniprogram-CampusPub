<block wx:if="{{token}}"><view class="publish-container"><view class="nav-header"><view class="nav-left"><text class="nav-title">发闲置</text></view><view class="nav-right"><button class="publish-btn-small" disabled="{{isPublishing}}" data-event-opts="{{[['tap',[['publishGoods',['$event']]]]]}}" bindtap="__e"><block wx:if="{{!isPublishing}}"><text>发布</text></block><block wx:else><text>发布中...</text></block></button></view></view><view class="page-content"><view class="card combined-section"><view class="images-area"><view class="images-grid"><block wx:for="{{imageList}}" wx:for-item="img" wx:for-index="index" wx:key="index"><view class="image-item"><image class="preview-image" src="{{img}}" mode="aspectFill"></image><view data-event-opts="{{[['tap',[['deleteImage',[index]]]]]}}" class="delete-btn" bindtap="__e"><text class="delete-icon">✕</text></view><view class="image-index">{{index+1}}</view></view></block><block wx:if="{{$root.g0<9}}"><view data-event-opts="{{[['tap',[['chooseImage',['$event']]]]]}}" class="{{['image-item','add-image-btn',(isPublishing)?'disabled':'']}}" bindtap="__e"><text class="add-text">添加图片</text><text class="add-count">{{"("+$root.g1+"/9)"}}</text></view></block></view></view><view class="description-area"><textarea class="description-input" placeholder="请详细描述商品的品牌、型号、成色、购买时间等信息..." auto-height="{{true}}" disabled="{{isPublishing}}" data-event-opts="{{[['input',[['__set_model',['','goodsDescription','$event',[]]]]]]}}" value="{{goodsDescription}}" bindinput="__e"></textarea></view><view class="action-row"><view data-event-opts="{{[['tap',[['toggleLocation',['$event']]]]]}}" class="{{['location-toggle',(isPublishing)?'disabled':'']}}" bindtap="__e"><text class="location-text">{{selectedLocation+"校区"}}</text></view></view><view class="category-compact"><text class="category-label">分类:</text><view class="category-tags"><block wx:for="{{categoryList}}" wx:for-item="category" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['selectCategory',['$0'],[[['categoryList','',index]]]]]]]}}" class="{{['category-tag-small',(selectedCategory===category)?'active':'',(isPublishing)?'disabled':'']}}" bindtap="__e"><text class="tag-text">{{category}}</text></view></block></view></view></view><view class="card list-item price-section"><view class="label-row"><text class="label">价格</text></view><view class="price-box"><text class="price-symbol">¥</text><input class="price-input" type="digit" placeholder="0.00" disabled="{{isPublishing}}" data-event-opts="{{[['input',[['__set_model',['','price','$event',[]]]]]]}}" value="{{price}}" bindinput="__e"/></view></view><block wx:if="{{isPublishing}}"><view class="publishing-overlay"><view class="publishing-content"><view class="loading-spinner"></view><text class="publishing-text">正在发布中...</text><text class="publishing-tip">请勿重复点击</text></view></view></block><view class="bottom-placeholder"></view></view></view></block>