from {
    width: 0;
    opacity: 0;
}
to {
    width: 40rpx;
    opacity: 1;
}
}
@keyframes slideIn {
from {
    width: 0;
    opacity: 0;
}
to {
    width: 40rpx;
    opacity: 1;
}
}
