@charset "UTF-8";
/* 水平间距 */
/* 水平间距 */
.message-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  overflow-y: auto;
}
/* 消息类型选择框 */
.message-tabs {
  display: flex;
  background-color: #f7f7f7;
  padding: 30rpx 0;
  /* 调整上下间距 */
  margin-bottom: 1rpx;
}
.message-tabs .tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* 图片容器 */
}
.message-tabs .tab-item .icon-box {
  position: relative;
  width: 68rpx;
  /* 图标大小，推荐 96rpx */
  height: 68rpx;
  margin-bottom: 10rpx;
  /* 角标样式 */
}
.message-tabs .tab-item .icon-box .tab-icon {
  width: 100%;
  height: 100%;
  /* 如果你的图片本身是方形的，可以用 border-radius 切圆角；
     如果图片本身就是设计好的透明底图标，可以去掉这个圆角 */
  border-radius: 20rpx;
}
.message-tabs .tab-item .icon-box .tab-unread-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 6rpx;
  background-color: #ff3b30;
  color: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ffffff;
  z-index: 10;
}
.message-tabs .tab-item .icon-box .tab-unread-badge .tab-unread-text {
  font-size: 20rpx;
  font-weight: 500;
  line-height: 1;
}
.message-tabs .tab-item .tab-text {
  font-size: 26rpx;
  color: #333333;
  font-weight: 400;
}
.message-tabs .tab-item:active {
  opacity: 0.7;
}
/* 消息列表样式保持不变 */
.message-list {
  padding-bottom: 40rpx;
}
.message-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}
.message-item:active {
  background-color: #f5f5f5;
}
.message-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.message-item .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  margin-right: 24rpx;
}
.message-item .content .top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.message-item .content .top-row .nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}
.message-item .content .top-row .time {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
  flex-shrink: 0;
}
.message-item .content .bottom-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.message-item .content .bottom-row .last-message {
  font-size: 28rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}
.message-item .content .bottom-row .unread-badge {
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: #ff3b30;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
}
.message-item .content .bottom-row .unread-badge .unread-text {
  font-size: 20rpx;
  color: #ffffff;
  line-height: 1;
}
