.goods-item {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  height: 550rpx;
}
.goods-item-image {
  position: relative;
  width: 100%;
  height: 370rpx;
  background: #f5f5f5;
  flex-shrink: 0;
  overflow: hidden;
}
.goods-item-image .image-placeholder {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  background: #f5f5f5;
}
.goods-item-image .image-placeholder .skeleton-box {
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  -webkit-animation: skeleton-loading 1.5s ease-in-out infinite;
          animation: skeleton-loading 1.5s ease-in-out infinite;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.goods-item-image .image-placeholder .goods-pic {
  width: 100%;
  height: 100%;
  display: block;
  opacity: 0;
  transition: opacity 0.3s ease;
  position: relative;
  z-index: 2;
}
.goods-item-image .image-placeholder.image-loaded .goods-pic {
  opacity: 1;
}
.goods-item-image .image-placeholder.image-loaded .skeleton-box {
  display: none;
}
.goods-item-image .image-placeholder .image-error {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
  z-index: 3;
}
.goods-item-image .image-placeholder .image-error .error-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  opacity: 0.5;
}
.goods-item-image .image-placeholder .image-error .error-text {
  font-size: 24rpx;
  color: #999;
}
@-webkit-keyframes skeleton-loading {
0% {
    background-position: 200% 0;
}
100% {
    background-position: -200% 0;
}
}
@keyframes skeleton-loading {
0% {
    background-position: 200% 0;
}
100% {
    background-position: -200% 0;
}
}
