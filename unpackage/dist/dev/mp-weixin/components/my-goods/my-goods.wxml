<view class="goods-item"><view data-event-opts="{{[['tap',[['gotoDetail',['$0'],['goods']]]]]}}" class="goods-item-image" bindtap="__e"><image class="goods-pic" src="{{goods.goods_big_logo}}" mode="aspectFill"></image></view><view class="goods-item-info"><view data-event-opts="{{[['tap',[['gotoDetail',['$0'],['goods']]]]]}}" class="goods-name" bindtap="__e">{{goods.goods_name}}</view><view data-event-opts="{{[['tap',[['gotoDetail',['$0'],['goods']]]]]}}" class="goods-footer" bindtap="__e"><block wx:if="{{goods&&goods.goods_price}}"><view class="goods-price"><text class="price-symbol">¥</text><text class="price-num">{{$root.f0}}</text></view></block><view class="goods-location"><text class="location-text">{{(goods.location||'位置未知')+"校区"}}</text></view></view><view data-event-opts="{{[['tap',[['gotoProfile',['$0'],['goods.publisher_id']]]]]}}" class="publisher-info" bindtap="__e"><view class="publisher-left"><image class="publisher-avatar" src="{{publisherAvatar}}" mode="aspectFill"></image><text class="publisher-name">{{publisherName}}</text></view><text class="card-time">{{$root.m0}}</text></view></view></view>